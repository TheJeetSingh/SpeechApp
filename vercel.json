{
  "version": 2,
  "builds": [
    {
      "src": "Server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Server/api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "CI=false npm run build"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/school-update", "destination": "/Server/api/school-update.js" },
    { "source": "/api/user/school", "destination": "/Server/api/user-school.js" },
    { "source": "/api/user/password", "destination": "/Server/api/user-password.js" },
    { "source": "/api/(.*)", "destination": "/Server/index.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
} 